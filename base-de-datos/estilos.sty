	% Chapter
	
		% Edición del minitoc
		\mtcrule\nomtcrule % Elimina las líneas antes y después del minitoc
		\renewcommand{\mtctitle}{Contenido}
		\setlength{\mtcindent}{0pt} % Elimina espacio lateral del minitoc, un poco al menos
		\renewcommand{\mtifont}{\bfseries} % Hace que las secciones en el minitoc sean negritas
		
		% Edición del chapter
		\titleformat{\chapter}[block]
		{\normalfont\Huge\bfseries\color{primero}}   % Estilo del título
		{\normalfont\huge Unidad \thechapter}          % "Chapter 1", etc.
		{0pt}                          % Sin espacio entre el número y el título
		{\vskip0.5cm}                  % Espacio vertical entre el número y el título
		[\minitoc \thispagestyle{chapterstyle}]  % Formato del título (ajustar según lo necesario
		
		\titlespacing*{\chapter}{0pt}{\baselineskip}{1,5cm} % Ajusta el espaciado alrededor del capítulo
	
		
		
	% 	Section
	
		\titleformat{\section}[block]
		{\normalfont\Large\bfseries\color{segundo}}  % Fuente y tamaño de la sección
		{\thesection}  % Número de la sección
		{1em}  % Espacio entre el número y el título
		{}  % Nada antes del título
		[\titlerule]
	
		% Ajusta el espacio antes y después de las secciones
		\titlespacing*{\section}{2pt}{\baselineskip}{2em}  % Espacios antes y después del título
	
	% 	Subsection
	
		\titleformat{\subsection}
		{\vspace{.8cm}\normalfont\large\bfseries\color{tercero}}   % Rojo para las subsecciones
		{\thesubsection}{1em}{}[\vspace{.3cm}]
	
