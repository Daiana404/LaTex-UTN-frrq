% Glosario
\makeglossary
%BEGIN_FOLD
\newglossaryentry{carrera}{
	name={carrera},
	description={Distancia entre el PMS y el PMI. Corresponde a un ángulo de giro de 180° del cigüeñal.}
}

\newglossaryentry{espacioneutro}{
	name={espacio neutro},
	description={Espacio comprendido entre el pistón en PMS y la culata. También llamado espacio muerto. Debe ser mínimo para evitar colisiones y mejorar el rendimiento volumétrico.}
}

\newglossaryentry{aspiracion}{
	name={aspiración},
	description={Admisión del fluido en el cilindro durante la carrera descendente del pistón.}
}

\newglossaryentry{compresion}{
	name={compresión},
	description={Se produce durante la carrera ascendente del pistón, inmediatamente antes de la descarga.}
}

\newglossaryentry{descarga}{
	name={descarga},
	description={Impulsión del fluido refrigerante hacia el conducto de descarga.}
}

\newglossaryentry{potenciaindicada}{
	name={potencia indicada},
	description={Potencia generada en el interior del cilindro.}
}

\newglossaryentry{potenciaefectiva}{
	name={potencia efectiva},
	description={Potencia suministrada por el motor al eje del compresor, considerando pérdidas mecánicas. Siempre mayor que la potencia indicada.}
}

\newglossaryentry{rendimientomecanico}{
	name={rendimiento mecánico},
	description={Relación entre la potencia indicada y la potencia efectiva: \( \eta_m = \frac{Pi}{Pe} \)}
}

\newacronym{dt}{DT}{Diferencia de Temperatura entre el espacio refrigerado y el evaporador}

\newglossaryentry{carga-refrigeracion}
{
	name={carga de refrigeración},
	description={Cantidad de calor que hay que extraer o incorporar para producir y mantener en el espacio acondicionado ciertas temperatura y humedad prefijadas}
}

