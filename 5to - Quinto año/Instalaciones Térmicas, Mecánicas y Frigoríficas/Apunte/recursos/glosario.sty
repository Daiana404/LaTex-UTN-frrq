\newacronym{pma}{PMA}{Punto Muerto Alto}
\newacronym{pms}{PMS}{Punto Muerto Superior}
\newacronym{pmb}{PMB}{Punto Muerto Bajo}
\newacronym{pmi}{PMI}{Punto Muerto Inferior}
\newacronym{vd}{Vd}{Volumen desplazado por el pistón}
\newacronym{vt}{Vt}{Volumen total del cilindro}
\newacronym{ve}{Ve}{Espacio neutro o espacio muerto}
\newacronym{pi}{Pi}{Potencia indicada}
\newacronym{pe}{Pe}{Potencia efectiva}
\newacronym{etam}{\ensuremath{\eta_m}}{Rendimiento mecánico}
