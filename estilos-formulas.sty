% Define un nuevo estilo llamado 'miestilo' que centra el contenido, mantiene el espaciado interno y ajusta el ancho
\tcbset{
	miestilo/.style={
		colback=white!97!brown, % Color de fondo
		colframe=brown!15!gray, % Color de borde
		breakable, % Permitir cajas que se dividen en páginas
		arc=3mm, % Radio de las esquinas
		boxsep=2mm, % Espaciado interno
		halign=center, % Centrar el contenido
	}
}

\newtcolorbox{cajita}{miestilo}

%Encabezado y pie de página
\fancypagestyle{pieyencabezado}{
	\fancyhf{} % Borra el encabezado y el pie de página predeterminados
	\renewcommand{\footrulewidth}{0.4pt} % Establece el ancho de la línea de pie de página en 0.4pt
	\fancyfoot[L]{Ingeniería Electromecánica} % Define el contenido del pie de página izquierdo
	\fancyfoot[C]{\includegraphics[width=.1\textwidth]{../../utncom}} % Define el número de página en el centro del pie de página
	\fancyfoot[R]{Página \thepage} % Define el contenido del pie de página derecho
	\renewcommand{\headrulewidth}{0.4pt} % Establece el ancho de la línea de encabezado en 0.4pt
	\fancyhead[L]{Hoja de fórmulas} % Define el contenido del encabezado izquierdo
	\fancyhead[C]{} % Define el contenido del encabezado central
	\fancyhead[R]{\textsc{\materia}} % Define el contenido del encabezado derecho
}
